@model IEnumerable<RentaCar.RealEstateManager.Database.Data.Entities.User>

@{
    ViewData["Title"] = "Users List";
}

<style>
    /* Основни стилове */
    .users-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
    }

    /* Стилове за банер секцията */
    .banner-card {
        border-radius: 15px;
        overflow: hidden;
        position: relative;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .banner-overlay {
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.4) 100%);
        padding: 40px;
        border-radius: 15px;
    }

    .banner-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 15px;
        color: #fff;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
    }

    .banner-description {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.1rem;
        margin-bottom: 0;
    }

    .banner-icon {
        max-width: 120px;
        filter: drop-shadow(2px 4px 6px rgba(0, 0, 0, 0.3));
    }

    /* Стилове за секцията с филтри */
    .filter-section {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
        margin-bottom: 30px;
    }

    .search-input {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s;
    }

        .search-input:focus {
            border-color: #ca7912;
            box-shadow: 0 0 0 0.2rem rgba(202, 121, 18, 0.25);
        }

    .btn-search {
        background-color: #ca7912;
        border-color: #ca7912;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-search:hover {
            background-color: #b06a10;
            border-color: #b06a10;
        }

    .btn-reset {
        background-color: #6c757d;
        border-color: #6c757d;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-reset:hover {
            background-color: #5a6268;
            border-color: #5a6268;
        }

    /* Стилове за таблицата */
    .users-table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
    }

    .table-header {
        background-color: #343a40;
        color: white;
    }

        .table-header th {
            padding: 15px;
            font-weight: 500;
            border: none;
        }

    .users-table tbody tr {
        transition: all 0.2s;
    }

        .users-table tbody tr:hover {
            background-color: rgba(202, 121, 18, 0.05);
        }

    .users-table td {
        padding: 15px;
        vertical-align: middle;
    }

    .profile-image {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    /* Стилове за бутоните за действия */
    .action-buttons {
        display: flex;
        gap: 5px;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 6px 12px;
        font-size: 0.85rem;
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-details {
        background-color: #17a2b8;
        border-color: #17a2b8;
        color: white;
    }

        .btn-details:hover {
            background-color: #138496;
            border-color: #138496;
        }

    .btn-edit {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #212529;
    }

        .btn-edit:hover {
            background-color: #e0a800;
            border-color: #e0a800;
        }

    .btn-delete {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

    .btn-roles {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

        .btn-roles:hover {
            background-color: #5a6268;
            border-color: #5a6268;
        }

    /* Стил за съобщение при липса на резултати */
    .no-results {
        background-color: #fff3cd;
        color: #856404;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        font-size: 1.1rem;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
    }

    }
</style>

<div class="users-container">
    <!-- Банер секция -->
    <div class="banner-card" style="background-image: url('../images/users-banner.jpg'); background-size: cover; background-position: center;">
        <div class="banner-overlay">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="banner-title">@ViewData["Title"]</h1>
                    <p class="banner-description">Manage and view all registered users in the system.</p>
                </div>
               
            </div>
        </div>
    </div>

    <!-- Секция с филтри -->
    <div class="filter-section">
        <form asp-action="Index" method="get" class="d-flex flex-wrap gap-3">
            <input type="text"
                   name="searchString"
                   value="@ViewData["CurrentFilter"]"
                   class="form-control search-input"
                   placeholder="Search by name, email, or username..."
                   style="flex: 2;" />

            <button type="submit" class="btn btn-search">
                Search <i class="fas fa-search ms-2"></i>
            </button>
            <a asp-action="Index" class="btn btn-reset">Reset Filters</a>
        </form>
    </div>

    <!-- Таблица с потребители -->
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped users-table">
                <thead class="table-header">
                    <tr>
                        <th>Email</th>
                        <th>UserName</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th>Identification Number</th>
                        <th>Profile Picture</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.UserName</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Age</td>
                            <td>@user.IdentificationNumber</td>
                            <td>
                                @if (!string.IsNullOrEmpty(user.ProfilePicture))
                                {
                                    <img src="@user.ProfilePicture" alt="Profile Picture" class="profile-image" />
                                }
                                else
                                {
                                    <span>No Picture</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-action btn-details">
                                        <i class="fas fa-info-circle me-1"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-action btn-edit">
                                        <i class="fas fa-edit me-1"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-action btn-delete">
                                        <i class="fas fa-trash-alt me-1"></i> Delete
                                    </a>
                                    <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-action btn-roles">
                                        <i class="fas fa-user-tag me-1"></i> Roles
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <!-- Съобщение при липса на резултати -->
        <div class="no-results">
            <i class="fas fa-exclamation-triangle me-2"></i>
            No users found matching the filter criteria.
        </div>
    }
</div>
