@model IEnumerable<RentaCar.RealEstateManager.Database.Data.Entities.User>

@{
    ViewData["Title"] = "Users List";
}

<h2>Users List</h2>

<!-- Форма за търсене -->
<form asp-action="Index" method="get" class="mb-3 d-flex">
    <div class="form-group me-2">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by name, email, or username..." />
    </div>
    <button type="submit" class="btn btn-primary me-2">Search</button>
    <a asp-action="Index" class="btn btn-secondary">Reset Filters</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Identification Number</th>
            <th>Profile Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Age</td>
                <td>@user.IdentificationNumber</td>
                <td>
                    @if (!string.IsNullOrEmpty(user.ProfilePicture))
                    {
                        <img src="@user.ProfilePicture" alt="Profile Picture" style="width:50px;height:50px;" />
                    }
                    else
                    {
                        <span>No Picture</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-secondary">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
