@model RentaCar.RealEstateManager.WebApp.Models.UserViewModel

@{
    ViewData["Title"] = "Age Verification";
}

<div class="age-verification-container">
    <div class="age-verification-header">
        <h1>Age Verification</h1>
        <p>You must be at least 18 years old to rent a car</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="UpdateAge" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Hidden field to store return URL -->
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

        <div class="form-group">
            <label for="age" class="form-label">Your Age</label>
            <input type="number" id="age" name="age" class="form-control" min="1" max="120" required />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="age-info">
            <p><strong>Note:</strong> We require age verification for legal reasons. You must be at least 18 years old to rent a car from our service.</p>
        </div>

        <div class="btn-container">
            <button type="submit" class="btn-primary">Verify Age</button>
            <a href="javascript:history.back()" class="btn-secondary">Cancel</a>
            <a asp-action="Create" asp-controller="Bookings" class="btn btn-link">Back to Booking</a>

        </div>



    </form>
</div>

@section Styles {
    <style>
        .age-verification-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .age-verification-header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 1px solid #e9ecef;
            padding-bottom: 20px;
        }

            .age-verification-header h1 {
                font-size: 2.2rem;
                font-weight: 600;
                color: #333;
                margin-bottom: 10px;
            }

            .age-verification-header p {
                color: #666;
                font-size: 1.1rem;
            }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 8px;
            color: #495057;
            display: block;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 12px 15px;
            font-size: 1rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: #ca7912;
                box-shadow: 0 0 0 0.25rem rgba(202, 121, 18, 0.25);
            }

        .btn-container {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .btn-primary {
            background-color: #ca7912;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 500;
            color: white;
            transition: background-color 0.3s;
            flex: 1;
        }

            .btn-primary:hover {
                background-color: #b06a10;
            }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 500;
            color: white;
            transition: background-color 0.3s;
            text-decoration: none;
            text-align: center;
            flex: 1;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                color: white;
            }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
        }

        .age-info {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-top: 20px;
            font-size: 0.9rem;
            color: #6c757d;
        }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}