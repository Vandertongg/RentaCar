@{
    ViewData["Title"] = "About Us";
}

<div class="about-us-container">
    <div class="about-header">
        <h1>About RentaCar</h1>
        <p class="lead">Your trusted partner for car rentals since 2020</p>
    </div>

    <div class="about-content">
        <div class="row">
            <div class="col-lg-6">
                <img src="~/images/about-us.jpg" alt="Our Team" class="img-fluid rounded" />
            </div>
            <div class="col-lg-6">
                <h2>Our Story</h2>
                <p>
                    RentaCar started with a simple idea: make car rentals easy, affordable, and accessible to everyone.
                    Founded in 2020, we've grown from a small local business to a trusted name in the car rental industry.
                </p>
                <p>
                    Our mission is to provide high-quality vehicles and exceptional customer service, ensuring that every
                    journey with our cars is comfortable, safe, and enjoyable.
                </p>
                <h2>Why Choose Us?</h2>
                <ul>
                    <li>Wide selection of well-maintained vehicles</li>
                    <li>Competitive pricing with no hidden fees</li>
                    <li>Flexible rental periods to suit your needs</li>
                    <li>24/7 customer support</li>
                    <li>Convenient pickup and drop-off locations</li>
                </ul>
            </div>
        </div>

        <div class="team-section mt-5">
            <h2 class="text-center mb-4">Meet Our Team</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="team-member">
                        <img src="~/images/team-1.jpg" alt="Team Member" class="img-fluid rounded-circle" />
                        <h4>John Doe</h4>
                        <p class="text-muted">CEO & Founder</p>
                        <p>John has over 15 years of experience in the automotive industry and is passionate about providing exceptional service.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="team-member">
                        <img src="~/images/team-2.jpg" alt="Team Member" class="img-fluid rounded-circle" />
                        <h4>Jane Smith</h4>
                        <p class="text-muted">Operations Manager</p>
                        <p>Jane ensures that all our operations run smoothly and that our customers receive the best possible experience.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="team-member">
                        <img src="~/images/team-3.jpg" alt="Team Member" class="img-fluid rounded-circle" />
                        <h4>Mike Johnson</h4>
                        <p class="text-muted">Head Mechanic</p>
                        <p>Mike and his team make sure all our vehicles are in perfect condition and safe for our customers.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="contact-section mt-5">
            <h2 class="text-center mb-4">Get In Touch</h2>
            <div class="row">
                <div class="col-md-6">
                    <div class="contact-info">
                        <h4>Contact Information</h4>
                        <p><i class="fa fa-map-marker"></i> 123 Rental Street, Sofia, Bulgaria</p>
                        <p><i class="fa fa-phone"></i> +359 2 123 4567</p>
                        <p><i class="fa fa-envelope"></i> info@rentacar.com</p>
                        <p><i class="fa fa-clock-o"></i> Monday-Friday: 9am-6pm, Saturday: 10am-4pm</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map-container">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d187671.1901652339!2d23.1864889!3d42.6954322!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40aa8682cb317bf5%3A0x400a01269bf5e60!2sSofia%2C%20Bulgaria!5e0!3m2!1sen!2sus!4v1649662304033!5m2!1sen!2sus" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .about-us-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .about-header {
            text-align: center;
            margin-bottom: 50px;
        }

            .about-header h1 {
                font-size: 2.5rem;
                color: #333;
                margin-bottom: 15px;
            }

            .about-header .lead {
                font-size: 1.2rem;
                color: #666;
            }

        .about-content h2 {
            color: #ca7912;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .about-content p {
            color: #555;
            line-height: 1.7;
            margin-bottom: 20px;
        }

        .about-content ul {
            color: #555;
            line-height: 1.7;
        }

            .about-content ul li {
                margin-bottom: 10px;
            }

        .team-section, .contact-section {
            padding-top: 30px;
            border-top: 1px solid #eee;
        }

        .team-member {
            text-align: center;
            padding: 20px;
            transition: all 0.3s ease;
        }

            .team-member:hover {
                transform: translateY(-10px);
            }

            .team-member img {
                width: 150px;
                height: 150px;
                object-fit: cover;
                margin-bottom: 15px;
                border: 5px solid #f8f9fa;
                box-shadow: 0 0 15px rgba(0,0,0,0.1);
            }

            .team-member h4 {
                color: #333;
                margin-bottom: 5px;
            }

        .contact-info {
            background-color: #f8f9fa;
            padding: 25px;
            border-radius: 8px;
            height: 100%;
        }

            .contact-info h4 {
                color: #ca7912;
                margin-bottom: 20px;
            }

            .contact-info p {
                margin-bottom: 15px;
            }

            .contact-info i {
                color: #ca7912;
                margin-right: 10px;
                width: 20px;
                text-align: center;
            }

        .map-container {
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
    </style>
}
