        /* Стилове за секцията с новини */
        .rentnews-section {
            background-color: #f8f9fa;
            padding: 40px 0;
            margin-bottom: 30px;
            border-bottom: 1px solid #e9ecef;
        }

        .rentnews-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .rentnews-title {
            font-size: 24px;
            font-weight: 600;
            color: #333;
            margin: 0;
        }

        .rentnews-link-main {
            color: #0d6efd;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .rentnews-link-main:hover {
                text-decoration: underline;
            }

        .rentnews-items {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }

        .rentnews-item {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .rentnews-item:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        .rentnews-date {
            font-size: 14px;
            color: #6c757d;
            margin-bottom: 10px;
        }

        .rentnews-item-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 12px;
            color: #212529;
        }

        .rentnews-excerpt {
            font-size: 14px;
            color: #495057;
            margin-bottom: 15px;
            line-height: 1.5;
        }

        .rentnews-read-more {
            color: #0d6efd;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            display: inline-block;
        }

            .rentnews-read-more:hover {
                text-decoration: underline;
            }

        .rentnews-footer {
            text-align: center;
        }

        .rentnews-button {
            padding: 10px 25px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

    </style>
}

