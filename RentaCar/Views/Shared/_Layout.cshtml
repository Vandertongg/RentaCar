@using RentaCar.RealEstateManager.Database.Data.Entities
@using RentaCar.RealEstateManager.API.Controllers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

    @* Позволява зареждане на цсс файлове различни от общите *@
    @RenderSection("Styles", required: false)
</head>
<body>
    @if (ViewBag.HideSidebar != true)
    {
        <header>
            <!-- <div class="image"> -->
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/Logo.png" alt="" />
            </a>
            <!-- </div> -->

            <ul class="nav">
                <li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="Index">Car</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="RentNews" asp-action="Index">RentNews</a>
                </li>

            </ul>

            <div class="search-register">
                <input type="text" name="" id="search" placeholder="Search..." />
                <i class="fa-brands fa-searchengin"></i>
                <a asp-area="Identity" asp-page="/Account/Register">
                    <button class="register" style="background-color: #28a745; color: white; border: none; padding: 0.5em 1em; border-radius: 4px; cursor: pointer;">
                        REGISTER
                    </button>
                </a>
            </div>
        </header>
    }

    @RenderBody()

    @if (ViewBag.HideSidebar != true)
    {
        <footer>
            <div class="identity column">
                <img src="~/Logo.png" alt="" />
                <h4>Follow us</h4>
                <div class="socials">
                    <i class="fa-brands fa-instagram"></i>
                    <i class="fa-brands fa-facebook"></i>
                    <i class="fa-brands fa-square-x-twitter"></i>
                </div>
                <p>RentaCar.com. All rights reserved.</p>
            </div>
            <div class="cars column">
                <h2>Cars</h2>
                <ul>
                    <li><a href="#">Car 1</a></li>
                    <li><a href="#">Car 2</a></li>
                    <li><a href="#">Car 3</a></li>
                </ul>
            </div>
            <div class="resources column">
                <h2>Resources</h2>
                <ul>
                    <li><a href="#">About us</a></li>
                    <li><a href="#">FAQ</a></li>
                    <li><a href="#">Contact us</a></li>
                    <!-- <li>Privacy policy</li> -->
                </ul>
            </div>
        </footer>
    }
    <script src="~/js/js/core/libs.min.js"></script>

    <!-- !!!!!!!!!!!!!!!!!!!! -->
    <script src="~/js/js/charts/dashboard.js" defer></script>

    <!-- fslightbox Script -->
    <script src="~/js/js/plugins/fslightbox.js"></script>

    <!-- AOS Animation Plugin-->
    <script src="~/js/aos.js"></script>

    <!-- App Script -->
    <script src="~/js/assets/js/vrooom.js" defer></script>

    <script src="~/js/scripts/utils.js"> </script>
    <script src="~/js/scripts/index.js"></script>
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/lib/wow/wow.min.js"></script>
    <script src="~/js/lib/easing/easing.min.js"></script>
    <script src="~/js/lib/waypoints/waypoints.min.js"></script>
    <script src="~/js/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/lib/counterup/counterup.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>