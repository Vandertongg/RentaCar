@model RentaCar.RealEstateManager.Database.Data.Entities.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<style>
    /* Основни стилове за страницата */
    .booking-edit-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .page-title {
        font-size: 2.2rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 30px;
        text-align: center;
        position: relative;
    }

        .page-title:after {
            content: '';
            display: block;
            width: 80px;
            height: 3px;
            background-color: #ca7912;
            margin: 15px auto 0;
        }

    /* Стилове за формата */
    .booking-form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        margin-bottom: 30px;
    }

    .booking-form-col {
        flex: 1;
        min-width: 300px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        font-weight: 500;
        margin-bottom: 8px;
        color: #495057;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ced4da;
        border-radius: 6px;
        font-size: 1rem;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #ca7912;
            box-shadow: 0 0 0 0.2rem rgba(202, 121, 18, 0.25);
            outline: none;
        }

    /* Стилове за бутоните */
    .btn-container {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        justify-content: center;
    }

    .btn-primary, .btn-secondary, .btn-success, .btn-danger {
        padding: 12px 25px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 1rem;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s;
        border: none;
        min-width: 150px;
    }

    .btn-primary {
        background-color: #ca7912;
        color: white;
    }

        .btn-primary:hover {
            background-color: #b06a10;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Стил за връщане назад */
    .back-link {
        display: block;
        margin-top: 30px;
        color: #6c757d;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
    }

        .back-link:hover {
            color: #ca7912;
        }

    /* Стилове за валидационни съобщения */
    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="booking-edit-container">
    <h1 class="page-title">Edit Booking</h1>

    <form asp-action="Edit">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Pk" />

        <div class="booking-form-row">
            <div class="booking-form-col">
                <div class="form-group">
                    <label asp-for="UserId" class="form-label">User</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CarId" class="form-label">Car</label>
                    <select asp-for="CarId" class="form-control" asp-items="ViewBag.Cars"></select>
                    <span asp-validation-for="CarId" class="text-danger"></span>
                </div>

                @if (User.IsInRole("Admin") || User.IsInRole("MehanicSpecialized"))
                {
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsApproved" /> @Html.DisplayNameFor(model => model.IsApproved)
                        </label>
                    </div>
                }
            </div>

            <div class="booking-form-col">
                <div class="form-group">
                    <label asp-for="StartDate" class="form-label">Start Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate" class="form-label">End Date</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="btn-container">
            <button type="submit" class="btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn-secondary">Cancel</a>
        </div>
    </form>

    @if (User.IsInRole("Admin") || User.IsInRole("MehanicSpecialized"))
    {
        <hr />
        <h4 class="section-title">Actions</h4>

        <div class="btn-container">
            <form asp-action="ApproveBooking" method="post" style="display: inline;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Pk" />
                <button type="submit" class="btn-success"
                        onclick="return confirm('Are you sure you want to approve this booking?');">
                    Approve
                </button>
            </form>

            <form asp-action="RejectBooking" method="post" style="display: inline;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Pk" />
                <button type="submit" class="btn-danger"
                        onclick="return confirm('Are you sure you want to reject this booking?');">
                    Reject
                </button>
            </form>
        </div>
    }
    else
    {
        <p class="text-muted">You do not have permission to approve or reject this booking.</p>
    }

    <a asp-action="Index" class="back-link">← Back to Bookings List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
