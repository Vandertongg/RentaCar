@model RentaCar.RealEstateManager.Database.Data.Entities.Booking

@{
    ViewData["Title"] = "Approve Booking";
}

<h1>Approve Booking</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">User</dt>
            <dd class="col-sm-8">@Model.User?.UserName ?? "No User"</dd>

            <dt class="col-sm-4">Car</dt>
            <dd class="col-sm-8">@Model.Car?.Model ?? "No Car"</dd>

            <dt class="col-sm-4">Start Date</dt>
            <dd class="col-sm-8">@Model.StartDate.ToShortDateString()</dd>

            <dt class="col-sm-4">End Date</dt>
            <dd class="col-sm-8">@Model.EndDate.ToShortDateString()</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>
        </dl>

        <form asp-action="ApproveBooking" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Pk" />
            <button type="submit" class="btn btn-success">Confirm Approval</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>