@model RentaCar.RealEstateManager.Database.Data.Entities.RentNews

@{
    ViewData["Title"] = "Edit News";
}

@section Styles {
    <style>
        .edit-news-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .edit-news-header {
            margin-bottom: 25px;
            border-bottom: 1px solid #e9ecef;
            padding-bottom: 15px;
        }

        .edit-news-title {
            font-size: 2rem;
            font-weight: 600;
            color: #212529;
        }

        .current-image-container {
            margin-bottom: 20px;
            border: 1px solid #e9ecef;
            padding: 10px;
            border-radius: 8px;
            background-color: #f8f9fa;
        }

        .current-image {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 8px;
            color: #495057;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 4px;
            padding: 10px 15px;
            font-size: 1rem;
            transition: border-color 0.3s;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
            }

        textarea.form-control {
            min-height: 200px;
            resize: vertical;
        }

        .btn-container {
            display: flex;
            gap: 10px;
            margin-top: 30px;
        }

        .btn-save {
            background-color: #0d6efd;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            font-weight: 500;
            transition: background-color 0.3s;
        }

            .btn-save:hover {
                background-color: #0b5ed7;
            }

        .btn-cancel {
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            font-weight: 500;
            transition: background-color 0.3s;
        }

            .btn-cancel:hover {
                background-color: #5a6268;
            }

        .image-preview-container {
            position: relative;
            margin-top: 10px;
        }

        .image-upload-label {
            display: inline-block;
            background-color: #f8f9fa;
            color: #495057;
            padding: 10px 15px;
            border-radius: 4px;
            border: 1px dashed #ced4da;
            cursor: pointer;
            transition: all 0.3s;
        }

            .image-upload-label:hover {
                background-color: #e9ecef;
                border-color: #0d6efd;
            }

        .file-input {
            position: absolute;
            left: -9999px;
        }

     
    </style>
}

<div class="edit-news-container">
    <div class="edit-news-header">
        <h1 class="edit-news-title">Edit News</h1>
    </div>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Pk" />

        <!-- Секция със снимка -->
        <div class="form-group">
            <label class="form-label">News Image</label>

            @if (!string.IsNullOrEmpty(Model.NewsPicture))
            {
                <div class="current-image-container">
                    <p class="text-muted mb-2">Current image:</p>
                    <img src="@Url.Content(Model.NewsPicture)" alt="News Image" class="current-image" />
                </div>
            }

            <div class="mt-3">
                <label for="image-upload" class="image-upload-label">
                    <i class="fa fa-upload me-2"></i> Choose a new image
                </label>
                <input id="image-upload" type="file" name="NewsPicture" class="file-input" accept="image/*" />
                <div id="image-preview" class="image-preview-container"></div>
            </div>
            <small class="text-muted">Leave empty to keep the current image</small>
        </div>

        <!-- Заглавие -->
        <div class="form-group">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter news title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Съдържание -->
        <div class="form-group">
            <label asp-for="Content" class="form-label">Content</label>
            <textarea asp-for="Content" class="form-control" placeholder="Enter news content"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <!-- Дата на публикуване -->
        <div class="form-group">
            <label asp-for="DatePosted" class="form-label">Publication Date</label>
            <input asp-for="DatePosted" type="date" class="form-control" />
            <span asp-validation-for="DatePosted" class="text-danger"></span>
        </div>

        <!-- Бутони -->
        <div class="btn-container">
            <button type="submit" class="btn-save">Save Changes</button>
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Скрипт за визуализация на избраната снимка преди качване
        document.getElementById('image-upload').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const previewContainer = document.getElementById('image-preview');
                    previewContainer.innerHTML = '';

                    const img = document.createElement('img');
                    img.src = event.target.result;
                    img.alt = 'Preview';
                    img.style.maxWidth = '100%';
                    img.style.maxHeight = '200px';
                    img.style.marginTop = '10px';
                    img.style.borderRadius = '4px';
                    img.style.boxShadow = '0 2px 5px rgba(0, 0, 0, 0.1)';

                    previewContainer.appendChild(img);
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}
